{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]"
      },
      "datafactorylocation": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]"
      }
    },
    "variables": {
      "edwVNETName": "tka-dev-edw-vnet",
      "edwVNETPrefix": "10.0.0.0/16",
      "edwAdfDataStagingVNETSubnetName": "tka-dev-edw-adf-data-staging-subnet",
      "edwAdfDataStagingVNETFESubnetPrefix": "10.0.1.0/24",
      "datafactoryName": "[concat('edw-data-staging-df-', uniqueString(resourceGroup().id))]"
    },
    "resources": [
      {
        "name": "[variables('edwVNETName')]",
        "type": "Microsoft.Network/virtualNetworks",
        "location": "[parameters('location')]",
        "apiVersion": "2019-09-01",
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[variables('edwVNETPrefix')]"
            ]
          },
          "subnets": [
            {
              "name": "[variables('edwAdfDataStagingVNETSubnetName')]",
              "properties": {
                "addressPrefix": "[variables('edwAdfDataStagingVNETFESubnetPrefix')]"
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.DataFactory/factories",
        "apiVersion": "2018-06-01",
        "name": "[variables('datafactoryName')]",
        "location": "[parameters('dataFactoryLocation')]",
        "properties": {}
      }
    ],
    "outputs": {
      "resourceGroupName": {
        "type": "string",
        "value": "[resourceGroup().name]"
      },
      "vnetLocation": {
        "type": "string",
        "value": "[parameters('location')]"
      },
      "vnetName": {
        "type": "string",
        "value": "[variables('edwVNETName')]"
      },
      "subnetName": {
        "type": "string",
        "value": "[variables('edwAdfDataStagingVNETSubnetName')]"
      },
      "dataFactoryName": {
        "type": "string",
        "value": "[variables('datafactoryName')]"
      }
    }
  }